{%- include "banner"
background: section.settings.background
title: section.settings.title
position_title: section.settings.position_title
content: section.settings.content
position_content: section.settings.position_content
-%}

{% include 'block' 
blocks: section.blocks
%}


{% schema %}
  {
    "name": "Banner",
    "settings": [
	  {
        "id": "background",
        "type": "image_picker",
        "label": "Image Banner"
      },

	  {
		"id": "title",
        "type": "text",
        "label": "Title Banner",
        "default": "Hello world"
	  },

	  {
		"id": "position_title",
        "type": "select",
        "label": "Position Title",
		"options": [
			{ "value": "left", "label": "Left" },
			{ "value": "right","label": "Right" },
			{ "value": "center", "label": "Center" }
		]
	  },

	  {
        "id": "content",
        "type": "textarea",
        "label": "Content Banner",
        "default": "Hello world"
      },

	  {
		"id": "position_content",
        "type": "select",
        "label": "Position Content",
		"options": [
			{ "value": "left", "label": "Left" },
			{ "value": "right","label": "Right" },
			{ "value": "center", "label": "Center" }
		]
	  }
    ],

    "blocks": [
        {
            "type": "select",
            "name": "Block",
            "settings": [
                {
                    "id": "background_block",
                    "type": "image_picker",
                    "label": "Background"
                },
                {
                    "id": "title_block",
                    "type": "text",
                    "label": "Title",
                    "default": "Hello world!"
                },
                {
                    "id": "position_title_block",
                    "type": "select",
                    "label": "Position Title Block",
                    "options": [
                        { "value": "left", "label": "Left" },
                        { "value": "right","label": "Right" },
                        { "value": "center", "label": "Center" }
                    ]
                }
            ]
        }   
    ]
  }

{% endschema %}

